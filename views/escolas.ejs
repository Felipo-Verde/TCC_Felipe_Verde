<!doctype html>
<html lang="en">

<head>
    <title>PokeDiario</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

    <%- include('css'); %>

</head>

<body>


    <%- include('header'); %>

        <main>

            <% if (mensagem !='' ) { %>

                <div class="alert alert-danger mx-auto" role="alert"
                    style="margin: 20px; justify-content: center; align-items: center; text-align: center; width: 20rem;">
                    <%= mensagem %>
                </div>

                <% } %>

                <h1 style="font-size: 60px; text-align: center; margin: 20px;">Escolas</h1>

                <div class="col justify-content-center text-center">

                    <% if (tipo=="administrador" ) { %>
                        <a href="/cadastro_escola" class="btn btn-primary"
                            style="min-width: 10rem; max-width: 30rem; padding: 15px; margin: 0px">
                            <h5 class="card-title" style="margin: 0;">
                                <p style="font-size: 30px; margin: 0%;">Adicionar</p>
                            </h5>
                        </a>
                    <% } %>

                    <div class="row justify-content-center">

                    <% escolas.forEach(escola=> { %>

                        <div class="card azul"
                            style="width: 18rem; padding: 15px; margin: 20px; border-radius: 25px;">
                            <a href="/turmas/<%= escola.id_escola  %>">
                                <img src="/images/<%= escola.foto_escola %>" class="card-img-top" style="max-height: 20rem; min-height: 12rem;" alt="foto escola">
                            </a>
                                
                            <div class="card-body text-center">

                                <h5 class="card-title" style="margin: 0;">
                                    <p style="font-size: 30px; margin: 0%;">
                                        <%= escola.nome_escola %>
                                    </p>
                                </h5>

                            </div>

                            <ul class="list-group list-group-flush azul">
                                <li class="list-group-item azul">Endere√ßo: <%= escola.endereco_escola %>
                                </li>
                            </ul>

                            <div class="card-footer text-decoration-none d-flex justify-content-evenly">

                                <% if (email==escola.administrador_email_escola) { %>

                                    <a href="/editar_escola/<%= escola.id_escola %>"
                                        class="text-decoration-none">
                                        <button type="button"
                                            class="btn btn-primary text-decoration-none">Editar</button>
                                    </a>
                                    <a href="/deletar_escola/<%= escola.id_escola %>"
                                        class="text-decoration-none">
                                        <button type="button" class="btn text-decoration-none"
                                            style="background-color: #2D3033; color: white;">Deletar</button>
                                    </a>

                                <% } %>

                                </div>
                            </div>

                        <% }) %>
                    </div>
                </div>
        </main>


        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
            integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
            </script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
            integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
            </script>
</body>

</html>