<!doctype html>
<html lang="en">

<head>
    <title>Barulhometro</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

    <%- include('css'); %>

</head>

<body>


    <%- include('header'); %>

        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8">

                        <% if (mensagem != '') { %>
                            <div class="alert alert-danger" role="alert">
                                <%= mensagem %>
                                </div>
                        <% } %>


                        <form method="POST" action="#" enctype="multipart/form-data"> <!-- action="/cadastro" -->
                            <legend style="font-size: 40px; text-align: center">Cadastro de Escola</legend>

                            <div class="row g-2">
                                <div class="form-floating mb-3 col-md">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" name="nome" id="nome" placeholder="nome">
                                        <label for="nome">Nome</label>
                                    </div>
                                </div>

                                <div class="form-floating mb-3 col-md">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" name="endereco" id="endereco" placeholder="nome">
                                        <label for="nome">Endere√ßo</label>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3 col-md-4">
                                <label for="formFile" class="form-label" style="color: white">Uma foto da escola</label>
                                <input class="form-control" type="file" name="imagem" id="formFile" required>
                            </div>

                            <input type="hidden" name="id_adm" id="id_adm" value="<%= email %>">

                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </form>
                    </div>
                </div>
            </div>

        </main>



            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
                integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
                crossorigin="anonymous">
                </script>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
                integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz"
                crossorigin="anonymous">
                </script>
</body>

</html>