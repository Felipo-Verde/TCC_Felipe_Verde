<!doctype html>
<html lang="en">

<head>
    <title>Barulhometro</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

    <%- include('css'); %>

</head>

<body>


    <%- include('header'); %>

        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8">

                        <% if (mensagem != '') { %>
                            <div class="alert alert-danger" role="alert">
                                <%= mensagem %>
                                </div>
                        <% } %>

                        <form method="POST" action="/editar_turma/<%= result[0]['id_turma'] %>" enctype="multipart/form-data"> <!-- action="/cadastro" -->
                            <legend style="font-size: 40px; text-align: center">Cadastro de Turma</legend>

                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" name="nome" id="nome" value="<%= result[0]['nome_turma'] %>" placeholder="nome">
                                <label for="nome">Nome</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" name="alunos" value="<%= result[0]['numalunos_turma'] %>" id="alunos"
                                    placeholder="30">
                                <label for="alunos">NÃºmero de alunos</label>
                            </div>

                            <div class="form-floating mb-3">
                                <select class="form-select" id="floatingSelect" name="turno" aria-label="Floating label select example">

                                    <option value="matutino" <% if (result[0]['turno_turma'] == 'matutino') { %> selected <% } %>>Matutino</option>
                                    <option value="vespertino" <% if (result[0]['turno_turma'] == 'vespertino') { %> selected <% } %> >Vespertino</option>
                                    <option value="noturno" <% if (result[0]['turno_turma'] == 'noturno') { %> selected <% } %> >Noturno</option>
                                    <option value="integral" <% if (result[0]['turno_turma'] == 'integral') { %> selected <% } %> >Integral</option>

                                </select>
                                <label for="floatingSelect">Turno</label>
                            </div>

                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </form>
                    </div>
                </div>
            </div>

        </main>



            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
                integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
                crossorigin="anonymous">
                </script>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
                integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz"
                crossorigin="anonymous">
                </script>
</body>

</html>